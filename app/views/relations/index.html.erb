<p id="notice"><%= notice %></p>

<h1>Relations</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>User invited</th>
      <th>Visible name</th>
      <th>Visible last name</th>
      <th>Visible born date</th>
      <th>Visible phone</th>
      <th>Visible email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relations.each do |relation| %>
      <tr>
        <td><%= relation.user %></td>
        <td><%= relation.user_invited %></td>
        <td><%= relation.visible_name %></td>
        <td><%= relation.visible_last_name %></td>
        <td><%= relation.visible_born_date %></td>
        <td><%= relation.visible_phone %></td>
        <td><%= relation.visible_email %></td>
        <td><%= link_to 'Show', relation %></td>
        <td><%= link_to 'Edit', edit_relation_path(relation) %></td>
        <td><%= link_to 'Destroy', relation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

